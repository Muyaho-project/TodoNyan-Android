<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">#313234</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Level progress bar custom style -->
    <style name="LevelProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/level_progress_bar_width</item>
        <item name="android:layout_height">@dimen/level_progress_bar_height</item>
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
        <item name="android:progressDrawable">@drawable/level_progress_bar</item>
    </style>
</resources>